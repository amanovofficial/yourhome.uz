<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="header_main">
                <h1 style="text-align: left;">Подтверждение номера телефона</h1>
                <div class="form-group">
                    <form action="/auth/verify" method="POST">
                        <label for="exampleInputText1">Введите код отправленный на ваш номер</label>
                        <div class="form-group">
                            <input name="verifyCode" type="text" class="form-control" id="exampleInputText12"
                                aria-describedby="textHelp" required>
                        </div>
                        <input type="hidden" name="name" value="{{user.name}}">
                        <input type="hidden" name="password" value="{{user.password}}">
                        <input type="hidden" name="tNumber" value="{{user.tNumber}}">
                        <button type="submit" class="btn customBGColor">Подтвердить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>